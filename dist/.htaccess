<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Si el archivo existe, sírvelo directamente (imágenes, css, js)
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Si no existe, redirige todo a index.html para que React maneje la ruta
  RewriteRule ^ index.html [L]
</IfModule>
